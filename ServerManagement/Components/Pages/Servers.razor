@page "/servers"

<h3>Servers</h3>
<br />
<br />
<div class="container-fluid text-center">
    <div class="row w-50">
        @foreach (var city in cities)
        {
            <div class="col">
                <div class="card">
                    <img src="/images/@(city).png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <button type="button" class="btn btn-primary">@city</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<br />
<ul>
    @foreach (var server in servers)
    {
        <li>
            @server.Name is in @server.City is
            <span style="color:@((server.IsRunning?"green":"red"))">
                @(server.IsRunning ? "Online" : "Offline")
                <a href="/servers/edit" class="btn btn-link">Edit</a>
            </span>
        </li>
    }
</ul>


@code {
    private List<Server> servers = ServersRepository.GetServersByCity("Toronto");
    private List<string> cities = CitiesRepository.GetCities();
}
