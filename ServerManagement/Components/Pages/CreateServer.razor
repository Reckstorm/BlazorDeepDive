@page "/servers/create"
@inject NavigationManager Navigation

<h3>Create Server</h3>
<br />
<br />

<EditForm Model="_server" FormName="createServer" OnValidSubmit="Submit">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="row mb-3">
        <div class="col-2">
            <label class="col-form-label">Name:</label>
        </div>
        <div class="col-6">
            <InputText @bind-Value="_server.Name" class="form-control"></InputText>
        </div>
        <div class="col-2">
            <ValidationMessage For="() => _server.Name"></ValidationMessage>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label class="col-form-label">City:</label>
        </div>
        <div class="col-6">
            <InputText @bind-Value="_server.City" class="form-control"></InputText>
        </div>
        <div class="col-2">
            <ValidationMessage For="() => _server.City"></ValidationMessage>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label class="col-form-label">Online:</label>
        </div>
        <div class="col-6">
            <InputCheckbox @bind-Value="_server.IsRunning" class="form-check-input"></InputCheckbox>
        </div>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="/servers" class="btn btn-primary">Cancel</a>
</EditForm>

@code {
    [SupplyParameterFromForm]
    private Server _server { get; set; } = new Server() { IsRunning = false };

    private void Submit()
    {
        ServersRepository.AddServer(_server);
        Navigation.NavigateTo("/servers");
    }
}
