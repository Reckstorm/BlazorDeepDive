<div class="row mb-3">
    <div class="col-2">
        <label class="col-form-label">@Label</label>
    </div>
    <div class="col-6 input-width">
        @InputComponent
    </div>
    <div class="col">
        @ValidationComponent
    </div>
</div>

@code {
    [Parameter]
    public string Label { get; set; }

    [Parameter]
    public RenderFragment InputComponent { get; set; }

    [Parameter]
    public RenderFragment ValidationComponent { get; set; }
}
